{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A  --node-modules-dir npm:vite build",
    "test": "deno test",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read https://deno.land/std@0.186.0/http/file_server.ts dist/"
  },
  "imports": {
    "vite": "npm:vite@^4.3.5",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.0.0"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "types": ["vite/client"]
  },
  "fmt": {
    "files": {
      "exclude": [".git/", ".node_modules/", "dist/", ".vite"]
    },
    "options": {
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
