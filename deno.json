{
  "tasks": {
    "check": "typos . .github .vscode && deno fmt --check && deno lint && deno check src/main.tsx test/converter.test.ts",
    "cache": "deno cache --reload --node-modules-dir npm:vite@^4.3.8 npm:vite-plugin-elm@^2.8.0 npm:elm@latest-0.19.1 npm:@vitejs/plugin-react@^4.0.0 npm:react@^18.2.0 npm:react-dom@^18.2.0",
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A  --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read https://deno.land/std@0.186.0/http/file_server.ts dist/"
  },
  "imports": {
    "vite": "npm:vite@^4.3.5",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.0.0"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "types": ["vite/client"]
  },
  "fmt": {
    "exclude": [".git/", ".node_modules/", "dist/", ".vite"],
    "lineWidth": 120,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "exclude": [".git/", ".node_modules/", "dist/", ".vite"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
