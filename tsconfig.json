{
  // TODO: Use tsconfig/base after all tools support tsconfig.extends array
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // https://www.typescriptlang.org/docs/handbook/esm-node.html
    "module": "node16",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "es2022"
    ],
    "noEmit": true,
    "jsx": "react-jsx",
    "composite": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["**/*.ts", "**/*.mts", "**/*.tsx"]
}
