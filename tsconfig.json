{
  // TODO: Use tsconfig/base after all tools support tsconfig.extends array
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "es2022",
      "deno.window"
    ],
    "types": ["vite/client"],
    "checkJs": true,
    "noEmit": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "composite": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["**/*.ts", "**/*.mts", "**/*.tsx"]
}
